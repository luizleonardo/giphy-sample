<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.GiphySample" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.GiphySample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GiphySample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GiphySample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@null</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="queryHint">@string/fragment_gif_list_search_view_hint</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:focusable">false</item>
    </style>
</resources>